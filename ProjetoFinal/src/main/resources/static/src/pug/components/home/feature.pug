include ../titles/title.pug

.more-feature
  .container.fixed-width-lg-up
    .item
      .row.spacing6
        .col-md-6
          .text.text-start.text-sm-center
            |
            |
            span.ion-ios-locked-outline
            |
            |
            +title-main("left", $t.crypto_landing.morefeature_title2)
            p.use-text-subtitle2.text-center.text-md-start
              | #{$t.crypto_landing.morefeature_subtitle2}
        .col-md-6.py-md-0.px-6
          .wow.fadeInRightShort(data-wow-offset="100" data-wow-delay="0.4s" data-wow-duration="0.3s")
            figure.illustration
              |
              |
              img.img-2d3d(
                src=img_assets+img_artwork[17]
                data-2d=img_assets+img_artwork[16]
                data-3d=img_assets+img_artwork[17]
                alt='feature'
              )/
              |
              |
    .item
      .row.spacing6.align-items-center
        .col-md-6.py-md-0.px-6.order-md-last
          .text.text-left.text-md-center
            |
            |
            span.ion-ios-locked-outline
            |
            |
            +title-main("left", $t.crypto_landing.morefeature_title1)
            p.use-text-subtitle2.text-center.text-md-start #{$t.crypto_landing.morefeature_subtitle1}
        .col-md-6.py-md-0.px-6.order-md-first
          .wow.fadeInRightShort(data-wow-offset="200" data-wow-delay="0.3s" data-wow-duration="0.3s")
            figure.illustration
              |
              |
              img.img-2d3d(
                src=img_assets+img_artwork[19]
                data-2d=img_assets+img_artwork[18]
                data-3d=img_assets+img_artwork[19]
                alt='feature'
              )/
              |
              |
    #statistic.item
      .row
        .col-md-12.px-sm-6.px-0
          .text.text-center.text-sm-center
            |
            |
            span.ion-ios-bolt-outline
            |
            |
            +title-main("center", $t.crypto_landing.morefeature_title3)
            p.text-center.use-text-subtitle2 #{$t.crypto_landing.morefeature_subtitle3}
          .container.max-md
            ul.chart-wrap
              each item, index in coinData
                li
                  .coin
                    .avatar-img.logo
                      |
                      |
                      img(src=assets+item.logo alt=item.name)/
                      |
                      |
                    h5.headline
                      | #{item.name}
                  .price
                    h6
                      | $#{item.price}
                    if item.status === 'down'
                      .down
                        i ▼
                        | #{item.percent}%
                    else if item.status === 'up'
                      .up
                        i ▲
                        | #{item.percent}%
                    else
                      .stay
                        i -
                        | #{item.percent}%
                  .chart
                    canvas(id="chart_canvas"+index height="30")
