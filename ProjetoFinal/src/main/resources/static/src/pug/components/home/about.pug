    .row.spacing6
      .col-md-6.px-6.order-lg-last
        +title-main("left", $t.crypto_landing.mainfeature_title)
        p.pb-2.use-text-subtitle2.text-center.text-md-start
          | #{$t.crypto_landing.mainfeature_subtitle}
        .card.video
          figure
            |
            |
            img(src=img_artwork[34] alt='cover')/
            |
            |
          |
          |
          button.btn-icon.play-btn.modal-trigger.waves-effect(data-target="video_modal" data-video="QPMkYyM2Gzg")
            i.ion-ios-play-outline
          |
          |
