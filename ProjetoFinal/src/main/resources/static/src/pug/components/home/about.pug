include ../titles/title.pug

.main-feature
  if youtube.use
    #video_modal.modal.video-popup
      .modal-content
        |
        |
        .headline
          h4 #{$t.crypto_landing.banner_title}
          |
          |
          button.btn-icon.modal-close.waves-effect
            i.material-icons close
        .text-center
          #video_iframe
